extends base

block content 
 main.main 
  div.card-container 
   each tour in tours
      div.card
        div.card__header 
            div.card__picture
                div.card__picture-overlay &nbsp;
                img.card__picture-img(src='img/tour-1.jpg' alt=`${tour.name}`) 

            h3.heading-tertirary 
                span= tour.name

        div.card__details
            h4.card__sub-heading #{tour.difficulty} #{tour.duration}-day(s) tour 
            p.card__text=tour.summary
            div.card__data 
                svg.card__icon 
                    use(xlink:href='img/icons.svg#icon-map-pin')
                span=tour.startLocation.description
            div.card__data 
                svg.card__icon 
                    use(xlink:href='img/icons.svg#icon-calendar')
                span=tour.startDates[0]
            div.card__data 
                svg.card__icon 
                    use(xlink:href='img/icons.svg#icon-flag')
                span #{tour.locations.length} stops
            div.card__data 
                svg.card__icon 
                    use(xlink:href='img/icons.svg#icon-user')
                span #{tour.maxGroupSize} people

        div.card__footer
            p 
                span.card__footer-value $ #{tour.price}
                span.card__foter-text per person
            p.card__ratings 
                span.card__footer-value #{tour.ratingsAverage}
                span.card__foter-text ratings (#{tour.ratingsQuantity})
            a.btn.btn--green.btn--small(href=`/tours/${tour.id}`) Details

